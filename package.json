{
    "name": "webview-test",
    "displayName": "webview-test",
    "description": "Testing WebView",
    "version": "0.0.1",
    "publisher": "wpifirst",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "enableProposedApi": true,
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            },
            {
                "command": "extension.viewer",
                "title": "Create Viewer"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && browserify ./out/riolog/sharedscript.js > ./resources/bundle.js",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "browserify": "^16.1.1",
        "watchify": "^3.11.0"
    },
    "dependencies": {
        "jsonc-parser": "^1.0.3",
        "why-is-node-running": "^2.0.2"
    }
}
